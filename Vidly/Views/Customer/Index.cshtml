<hr />
<p>
    @Html.ActionLink("New Customer", "New", null, new { @class = "btn btn-primary" })
</p>
<table class="table" id="customers">
    <thead>
        <tr>
            <th>
                Customers
            </th>
            <th>
                Membership Type
